# 服务器配置
NODE_ENV=development
PORT=3000

# 前端URL（CORS配置用）
FRONTEND_URL=http://localhost:3001

# 数据库配置（MySQL）
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ai_wardrobe_dev
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=40
DATABASE_POOL_IDLE=30000
DATABASE_POOL_ACQUIRE_TIMEOUT=10000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_BULLMQ_DB=2

# BullMQ配置
BULLMQ_PREFIX=ai_photo
BULLMQ_KEEP_COMPLETED_SECONDS=86400
BULLMQ_KEEP_COMPLETED_COUNT=1000
BULLMQ_KEEP_FAILED_COUNT=500
BULLMQ_DEFAULT_ATTEMPTS=3

# JWT配置（艹，这个tm很重要！生产环境必须改！）
JWT_SECRET=your_jwt_secret_key_change_this_in_production_min_32_chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 腾讯云COS配置（轮播图上传）
COS_SECRET_ID=your_cos_secret_id
COS_SECRET_KEY=your_cos_secret_key
COS_BUCKET=your-bucket-name
COS_REGION=ap-guangzhou

# 加密配置
ENCRYPTION_KEY_V1=your_32_character_encryption_key_v1_change_this
ENCRYPTION_KEY_V2=your_32_character_encryption_key_v2_optional

# 邮件服务配置（邮箱验证码用，生产必须填）
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=no-reply@example.com
SMTP_FROM_NAME=AI衣柜

# 日志配置
LOG_LEVEL=info
