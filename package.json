{
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.3.0",
    "isomorphic-dompurify": "^2.31.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.3",
    "@types/wechat-miniprogram": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "miniprogram-ci": "^2.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "build:miniprogram": "tsc -p apps/miniprogram/tsconfig.json",
    "lint:miniprogram": "eslint \"apps/miniprogram/**/*.{ts,js}\"",
    "format": "prettier --write \"apps/miniprogram/**/*.{ts,js,wxml,wxss,json}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "apps/miniprogram/**/*.{ts,js}": [
      "eslint --fix"
    ],
    "apps/miniprogram/**/*.{ts,js,wxml,wxss,json}": [
      "prettier --write"
    ]
  }
}
